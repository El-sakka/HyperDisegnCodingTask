<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.ProductDetails">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/detail_image_view"
            android:src="@drawable/ic_launcher_background"
            android:layout_height="256dp"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/detail_price_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/detail_image_view"
            android:layout_margin="8dp"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:hint="$15.15" />


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_image_view"
            android:layout_margin="16dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding ="8dp"
                >

                <TextView
                    android:text="@string/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    />
                <TextView
                    android:id="@+id/detail_description_text_view"
                    android:hint="loearmkljklfjsdkjgslkdgjsldgjsdlkfg"
                    android:layout_width="match_parent"
                    android:layout_height="76dp"

                    />
            </LinearLayout>


        </android.support.v7.widget.CardView>


    </RelativeLayout>


</FrameLayout>